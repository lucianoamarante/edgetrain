{
  "name": "@edgetrain/core",
  "version": "0.1.0",
  "description": "Production-grade on-device training framework using WebGPU",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "scripts": {
    "build": "rollup -c",
    "dev": "rollup -c -w",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "demo": "vite demo",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "format:check": "prettier --check src/**/*.ts",
    "precommit": "pre-commit run --all-files",
    "prepare": "npm run build"
  },
  "keywords": [
    "webgpu",
    "machine-learning",
    "deep-learning", 
    "neural-networks",
    "training",
    "edge-computing",
    "privacy",
    "federated-learning",
    "typescript",
    "browser",
    "gpu",
    "ai",
    "tensor",
    "framework",
    "performance",
    "on-device",
    "real-time"
  ],
  "author": "EdgeTrain Contributors",
  "homepage": "https://github.com/v-code01/edgetrain",
  "repository": {
    "type": "git",
    "url": "https://github.com/v-code01/edgetrain.git"
  },
  "bugs": {
    "url": "https://github.com/v-code01/edgetrain/issues"
  },
  "license": "Apache-2.0",
  "devDependencies": {
    "@rollup/plugin-node-resolve": "^15.0.0",
    "@rollup/plugin-typescript": "^11.0.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@webgpu/types": "^0.1.61",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.4.1",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^30.0.0-beta.3",
    "jsdom": "^26.1.0",
    "pre-commit": "^1.2.2",
    "prettier": "^3.5.3",
    "rollup": "^4.0.0",
    "ts-jest": "^29.3.4",
    "tslib": "^2.6.0",
    "typescript": "^5.0.0",
    "vite": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
